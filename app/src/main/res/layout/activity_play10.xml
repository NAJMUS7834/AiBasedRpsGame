<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Play10">

    <ImageView
        android:id="@+id/iv_YourChoice"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/b_you"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_ComputerChoice"
        app:layout_constraintTop_toTopOf="@+id/iv_ComputerChoice"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/you_scis"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/iv_ComputerChoice"
        android:layout_width="152dp"
        android:layout_height="0dp"
        android:layout_marginBottom="47dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="31dp"
        app:layout_constraintBottom_toBottomOf="@+id/b_comp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/comp_rock"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/b_you"
        android:layout_width="188dp"
        android:layout_height="50dp"
        android:layout_marginTop="178dp"
        android:background="#ffffff"
        android:text="YOUR CHOICE"
        android:textColor="#000"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/iv_YourChoice"
        app:layout_constraintRight_toRightOf="@+id/iv_YourChoice"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/b_comp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:background="#ffffff"
        android:text="A.I CHOICE"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="@+id/iv_ComputerChoice"
        app:layout_constraintRight_toRightOf="@+id/iv_ComputerChoice"
        app:layout_constraintTop_toTopOf="@+id/b_you"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/b_score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="55dp"
        android:background="@color/colorPrimaryDark"
        android:text="Your Score: 0     A.I Score: 0"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_you"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/b_rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/colorAccent"
        android:text="ROCK"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/b_paper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b_paper"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/b_paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:background="@color/colorAccent"
        android:text="PAPER"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/b_scissors"
        app:layout_constraintRight_toLeftOf="@+id/b_scissors"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/b_scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="SCISSORS"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="42dp" />

    <Button
        android:id="@+id/b_comment"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="65dp"
        android:background="@color/colorPrimaryDark"
        android:text="good luck!"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/b_rock"
        app:layout_constraintLeft_toLeftOf="@+id/b_score"
        app:layout_constraintRight_toRightOf="@+id/b_score"
        app:layout_constraintTop_toTopOf="@+id/b_score"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_declare"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:text=" Let's see who wins."
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="italic"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/b_score"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_YourChoice"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>